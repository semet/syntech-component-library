{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist"
  },
  "include": [
    "src/index.ts",
    "src/components/**/*.tsx",
    "src/components/**/*.ts"
  ],
  "exclude": [
    "src/main.tsx",
    "src/App.tsx",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx"
  ]
}
